<div class="container">
  <div class="row">
    <div class="col-md-11 mx-md-auto">
      <p id="notice"><%= notice %></p>
      <h1>Event Categories</h1>

      <%= search_form_for @q do |f| %>
        <div class="row mb-4">
          <div class="col-md-9">
            <%= f.search_field :name_or_description_cont, class: "form-control", placeholder: "Search for event categories" %>
          </div>
          <div class="col-md-3">
            <%= f.submit class: "btn btn-primary" %>
            <%= link_to "Reset", event_categories_path, class: "btn btn-secondary" %>
          </div>
        </div>
      <% end %>

      <table class="table table-bordered table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th colspan="3">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @event_categories.each do |event_category| %>
            <tr>
              <td><%= event_category.name %></td>
              <td><%= event_category.description %></td>
              <td><%= link_to 'Show', event_category, class: "btn btn-info btn-sm" %></td>
              <td><%= link_to 'Edit', edit_event_category_path(event_category), class: "btn btn-secondary btn-sm" %></td>
              <td><%= link_to 'Destroy', event_category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to 'New Event Category', new_event_category_path, class: "btn btn-success" %>
    </div>
  </div>
</div>


<br>

