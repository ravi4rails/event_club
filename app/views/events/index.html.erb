<div class="container">
  <div class="row">
    <div class="col-md-11 mx-md-auto">
      <p id="notice"><%= notice %></p>
      <h1>Events</h1>
      <%= search_form_for @q do |f| %>
        <div class="row mb-4">
          <div class="col-md-9">
            <%= f.search_field :title_or_venue_or_city_or_state_or_country_cont, class: "form-control", placeholder: "Search for event" %>
          </div>
          <div class="col-md-3">
            <%= f.submit class: "btn btn-primary" %>
            <%= link_to "Reset", events_path, class: "btn btn-secondary" %>
          </div>
        </div>
      <% end %>
      <table class="table table-stripped table-bordered">
        <thead>
          <tr>
            <th>Name</th>
            <th>Venue</th>
            <th colspan="3">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @events.each do |event| %>
            <tr>
              <td><%= event.title %></td>
              <td><%= event.venue %></td>
              <td><%= link_to 'Show', event,class: "btn btn-info btn-sm" %></td>
              <td><%= link_to 'Edit', edit_event_path(event),class: "btn btn-secondary btn-sm" %></td>
              <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger btn-sm"  %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to 'New Event', new_event_path, class: "btn btn-success" %>
    </div>
  </div>
</div>
