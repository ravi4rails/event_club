<div class="container">
  <div class="row">
    <div class="col-md-11 mx-md-auto">
      <p id="notice"><%= notice %></p>
      <h1>Event Organizers</h1>
      <%= search_form_for @q do |f| %>
        <div class="row mb-4">
          <div class="col-md-9">
            <%= f.search_field :name_or_address_or_city_or_state_or_country_cont, class: "form-control", placeholder: "Search for event organizers" %>
          </div>
          <div class="col-md-3">
            <%= f.submit class: "btn btn-primary" %>
            <%= link_to "Reset", event_organizers_path, class: "btn btn-secondary" %>
          </div>
        </div>
      <% end %>
      <table class="table table-stripped table-bordered">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Contact</th>
            <th>Address</th>
            <th colspan="3">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @event_organizers.each do |event_organizer| %>
            <tr>
              <td><%= event_organizer.name %></td>
              <td><%= event_organizer.email %></td>
              <td><%= event_organizer.contact %></td>
              <td><%= event_organizer.address %></td>
              <td><%= link_to 'Show', event_organizer,class: "btn btn-info btn-sm" %></td>
              <td><%= link_to 'Edit', edit_event_organizer_path(event_organizer),class: "btn btn-secondary btn-sm" %></td>
              <td><%= link_to 'Destroy', event_organizer, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger btn-sm"  %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to 'New Event Organizer', new_event_organizer_path, class: "btn btn-success" %>
    </div>
  </div>
</div>
